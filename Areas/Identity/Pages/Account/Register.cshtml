@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" enctype="multipart/form-data">
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
             <div class="form-floating mb-3">
                <input asp-for="Input.FirstName" class="form-control" autocomplete="FirstName" aria-required="true" placeholder="FirstName" />
                <label asp-for="Input.FirstName">FirstName</label>
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
             <div class="form-floating mb-3">
                <input asp-for="Input.LastName" class="form-control" autocomplete="LastName" aria-required="true" placeholder="LastName" />
                <label asp-for="Input.LastName">LastName</label>
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
             <div class="form-floating mb-3">
                <input asp-for="Input.Address" class="form-control" autocomplete="Address" aria-required="true" placeholder="Address" />
                <label asp-for="Input.Address">Address</label>
                <span asp-validation-for="Input.Address" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input type="file" asp-for="Input.Photo" class="form-control" autocomplete="Photo" aria-required="true" placeholder="Photo" />
                <label asp-for="Input.Photo">Address</label>
                <span asp-validation-for="Input.Photo" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <select asp-for="Input.Role" class="form-select" id="roleSelector" aria-required="true">
                    <option value="">اختر النوع</option>
                    <option value="Student">طالب</option>
                    <option value="Teacher">مدرس</option>
                </select>
                <label asp-for="Input.Role">Role</label>
                <span asp-validation-for="Input.Role" class="text-danger"></span>
            </div>
            <!-- حقول الطالب -->
            <div id="studentFields" style="display: none;">
                <div class="form-floating mb-3">
                    <input asp-for="Input.ParentName" class="form-control" placeholder="اسم ولي الأمر" />
                    <label asp-for="Input.ParentName">اسم ولي الأمر</label>
                    <span asp-validation-for="Input.ParentName" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.ParentPhone" class="form-control" placeholder="رقم هاتف ولي الأمر" />
                    <label asp-for="Input.ParentPhone">رقم هاتف ولي الأمر</label>
                    <span asp-validation-for="Input.ParentPhone" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.ParentMail" class="form-control" placeholder="البريد الإلكتروني لولي الأمر" />
                    <label asp-for="Input.ParentMail">البريد الإلكتروني لولي الأمر</label>
                    <span asp-validation-for="Input.ParentMail" class="text-danger"></span>
                </div>
                <!-- الحقول الجديدة -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.StudentDB" type="date" class="form-control" placeholder="تاريخ ميلاد الطالب" />
                    <label asp-for="Input.StudentDB">تاريخ ميلاد الطالب</label>
                    <span asp-validation-for="Input.StudentDB" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.EnrollmentDate" type="date" class="form-control" placeholder="تاريخ التسجيل" />
                    <label asp-for="Input.EnrollmentDate">تاريخ التسجيل</label>
                    <span asp-validation-for="Input.EnrollmentDate" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.GradeLevel" class="form-control" placeholder="المستوى الدراسي" />
                    <label asp-for="Input.GradeLevel">المستوى الدراسي</label>
                    <span asp-validation-for="Input.GradeLevel" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.EmergencyContact" class="form-control" placeholder="رقم هاتف للطوارئ" />
                    <label asp-for="Input.EmergencyContact">رقم هاتف للطوارئ</label>
                    <span asp-validation-for="Input.EmergencyContact" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.AttendancePercent" type="number" step="0.01" min="0" max="100" class="form-control" placeholder="نسبة الحضور" />
                    <label asp-for="Input.AttendancePercent">نسبة الحضور</label>
                    <span asp-validation-for="Input.AttendancePercent" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <textarea asp-for="Input.StudentNotes" class="form-control" placeholder="ملاحظات عن الطالب" style="height: 100px;"></textarea>
                    <label asp-for="Input.StudentNotes">ملاحظات عن الطالب</label>
                    <span asp-validation-for="Input.StudentNotes" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="Input.StudentIsActive" class="form-check-input" type="checkbox" />
                    <label asp-for="Input.StudentIsActive" class="form-check-label">الطالب مفعل</label>
                    <span asp-validation-for="Input.StudentIsActive" class="text-danger"></span>
                </div>
               
                @* <div class="form-floating mb-3"> *@
                @*     <select asp-for="Input.SubscriptionId" class="form-control"> *@
                @*         <option value="">اختر الاشتراك</option> *@
                @*         <!-- Add options dynamically --> *@
                @*     </select> *@
                @*     <label asp-for="Input.SubscriptionId">الاشتراك</label> *@
                @*     <span asp-validation-for="Input.SubscriptionId" class="text-danger"></span> *@
                @* </div> *@

                @* <div class="form-floating mb-3"> *@
                @*     <select asp-for="Input.AcademicYearId" class="form-control"> *@
                @*         <option value="">اختر السنة الدراسية</option> *@
                @*         <!-- Add options dynamically --> *@
                @*     </select> *@
                @*     <label asp-for="Input.AcademicYearId">السنة الدراسية</label> *@
                @*     <span asp-validation-for="Input.AcademicYearId" class="text-danger"></span> *@
                @* </div> *@

            
            </div>

            <!-- حقول المدرس -->
            <div id="teacherFields" style="display: none;">
                <div class="form-floating mb-3">
                    <input asp-for="Input.TeacherNotes" class="form-control" placeholder="نبذة عنك أو عن المحتوى" />
                    <label asp-for="Input.TeacherNotes">المحتوى أو نبذة</label>
                    <span asp-validation-for="Input.TeacherNotes" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.TeacherHireDate" type="date" class="form-control" placeholder="تاريخ التعيين" />
                    <label asp-for="Input.TeacherHireDate">تاريخ التعيين</label>
                    <span asp-validation-for="Input.TeacherHireDate" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.TeacherDB" type="date" class="form-control" placeholder="تاريخ ميلاد المدرس" />
                    <label asp-for="Input.TeacherDB">تاريخ ميلاد المدرس</label>
                    <span asp-validation-for="Input.TeacherDB" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Specialty" class="form-control" placeholder="التخصص" />
                    <label asp-for="Input.Specialty">التخصص</label>
                    <span asp-validation-for="Input.Specialty" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Salary" type="number" step="0.01" class="form-control" placeholder="الراتب" />
                    <label asp-for="Input.Salary">الراتب</label>
                    <span asp-validation-for="Input.Salary" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.TeacherNetAmount" type="number" step="0.01" class="form-control" placeholder="القيمة المتفق عليها" />
                    <label asp-for="Input.TeacherNetAmount">القيمة المتفق عليها</label>
                    <span asp-validation-for="Input.TeacherNetAmount" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <textarea asp-for="Input.TeacherNotes" class="form-control" placeholder="نبذة عنك أو عن المحتوى" style="height: 100px;"></textarea>
                    <label asp-for="Input.TeacherNotes">المحتوى أو نبذة</label>
                    <span asp-validation-for="Input.TeacherNotes" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="Input.TeacherIsActive" class="form-check-input" type="checkbox" />
                    <label asp-for="Input.TeacherIsActive" class="form-check-label">المدرس مفعل</label>
                    <span asp-validation-for="Input.TeacherIsActive" class="text-danger"></span>
                </div>
