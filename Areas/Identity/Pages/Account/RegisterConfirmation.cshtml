@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Register Confirmation";
}

<style>
    body {
        background: linear-gradient(to right, #74ebd5, #ACB6E5);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .confirmation-card {
        background-color: white;
        border-radius: 1rem;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        padding: 2.5rem;
        max-width: 600px;
        margin: 5rem auto;
        text-align: center;
    }

    .confirmation-title {
        font-size: 2rem;
        font-weight: bold;
        color: rgba(6, 187, 204, 1);
        margin-bottom: 1.5rem;
    }

    .confirmation-message {
        font-size: 1.1rem;
        color: #333;
        margin-top: 1rem;
    }

    .confirm-link {
        display: inline-block;
        margin-top: 1.5rem;
        padding: 0.5rem 1.5rem;
        border-radius: 2rem;
        border: 2px solid rgba(6, 187, 204, 1);
        color: rgba(6, 187, 204, 1);
        font-weight: bold;
        text-decoration: none;
        transition: all 0.3s ease;
    }

        .confirm-link:hover {
            background-color: rgba(6, 187, 204, 1);
            color: white;
        }
</style>

<div class="confirmation-card">
    <div class="confirmation-title">Register Confirmation</div>

    @if (Model.DisplayConfirmAccountLink)
    {
        <p class="confirmation-message">
            This app does not currently have a real email sender registered.<br />
            See <a href="https://aka.ms/aspaccountconf" target="_blank">these docs</a> for how to configure a real email sender.
        </p>
        <a id="confirm-link" class="confirm-link" href="@Model.EmailConfirmationUrl">
            Click here to confirm your account
        </a>
    }
    else
    {
        <p class="confirmation-message">
            Please check your email to confirm your account.
        </p>
    }
</div>
