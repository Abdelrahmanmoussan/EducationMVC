@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<style>
    body {
        background: linear-gradient(to right, #74ebd5, #ACB6E5);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .forgot-card {
        max-width: 450px;
        margin: 50px auto;
        padding: 30px;
        background-color: white;
        border-radius: 15px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
    }

    .forgot-title {
        font-size: 28px;
        font-weight: bold;
        margin-bottom: 20px;
        color: rgba(6, 187, 204, 1);
        text-align: center;
    }

    .btn-reset {
        border: 2px solid rgba(6, 187, 204, 1);
        color: rgba(6, 187, 204, 1);
        border-radius: 50px;
        transition: 0.3s;
    }

        .btn-reset:hover {
            background-color: rgba(6, 187, 204, 1);
            color: white;
        }

    .form-label {
        font-weight: 500;
    }
</style>

<div class="forgot-card">
    <div class="forgot-title">Forgot Your Password?</div>

    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

        <div class="form-floating mb-3">
            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
            <label asp-for="Input.Email">Email</label>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <button type="submit" class="w-100 btn btn-reset py-2">Reset Password</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
