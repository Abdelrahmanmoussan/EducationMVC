@model IdentityText.Models.ClassGroup
@{
    ViewData["Title"] = "Course Details";
   
}

<style>
    body {
      
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .card-custom {
        border: 3px solid rgba(6, 187, 204, 1);
        border-radius: 20px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
        overflow: hidden;
        background: #fff;
    }

    .card-header-custom {
        background-color: rgba(6, 160, 180, 1);
        color: white;
        padding: 25px 30px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
    }

        .card-header-custom h1 {
            margin: 0;
            font-size: 2rem;
            font-weight: bold;
        }

    .price-badge {
        background-color: #fff;
        color: rgba(6, 160, 180, 1);
        font-weight: bold;
        padding: 6px 20px;
        border-radius: 30px;
        font-size: 1.2rem;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
    }

    .btn-outline-primary {
        color: rgba(6, 187, 204, 1);
        border: 2px solid rgba(6, 187, 204, 1);
        border-radius: 30px;
        font-weight: bold;
        padding: 8px 22px;
        transition: 0.3s ease;
        background: transparent;
        text-decoration: none;
    }

        .btn-outline-primary:hover {
            background: rgba(6, 187, 204, 1);
            color: white;
        }

    .course-image {
        border-top-left-radius: 0;
        border-bottom-left-radius: 20px;
        object-fit: cover;
        height: 100%;
        width: 100%;
    }

    .course-details {
        padding: 30px;
    }

        .course-details h4 {
            font-weight: bold;
            color: rgba(6, 187, 204, 1);
            margin-bottom: 1.5rem;
            border-bottom: 2px solid rgba(6, 187, 204, 0.5);
            display: inline-block;
            padding-bottom: 6px;
        }

    .info-line {
        font-size: 1.1rem;
        margin-bottom: 15px;
    }

        .info-line i {
            margin-right: 10px;
            color: rgba(6, 187, 204, 1);
        }

        .info-line span {
            font-weight: 600;
            color: #333;
        }

    .subject-text-white {
        color: #fff !important;
    }

    .action-buttons {
        display: flex;
        justify-content: space-between;
        flex-wrap: wrap;
        gap: 15px;
    }
</style>


<div class="container py-5">

    <div class="card-custom">

        <div class="card-header-custom w-100 d-flex flex-column flex-md-row justify-content-between align-items-md-center">
            <div>
                <h1 class="mb-0 fs-5 subject-text-white"><i class="fas fa-book-open me-2"></i>@Model.Title</h1>
               
            </div>
            <span class="price-badge mt-3 mt-md-0">$@Model.Price</span>
        </div>

        <div class="row g-0">
            <div class="col-md-5">
                <img src="~/images/courses/course-default.jpg"
                     alt="@Model.Title"
                     class="course-image" />
            </div>

            <div class="col-md-7 course-details d-flex flex-column justify-content-between">
                <div>
                    <h4>Course Info</h4>

                    <div class="info-line"><i class="fas fa-calendar-alt"></i><span>Start Date:</span> @Model.StartDate.ToString("dd MMM yyyy")</div>
                    <div class="info-line"><i class="fas fa-calendar-check"></i><span>End Date:</span> @Model.EndDate.ToString("dd MMM yyyy")</div>
                    <div class="info-line"><i class="fas fa-user"></i><span>Teacher:</span> @Model.Teacher.ApplicationUser.FirstName @Model.Teacher.ApplicationUser.LastName</div>
                    <div class="info-line"><i class="fas fa-map-marker-alt"></i><span>Location:</span> @Model.Location</div>
                </div>

                <div class="mt-4 action-buttons">
                    <a asp-area="Customer"
                       asp-controller="ClassGroup"
                       asp-action="Coures"
                       class="btn btn-outline-primary">
                        <i class="fas fa-arrow-left me-2"></i>Back
                    </a>
                    <a asp-area="Customer"
                       asp-controller="Enrollment"
                       asp-action="Register"
                       asp-route-id="@Model.ClassGroupId"
                       class="btn btn-outline-primary">
                        <i class="fas fa-sign-in-alt me-2"></i>Enroll Now
                    </a>
                  
                </div>
            </div>
        </div>
    </div>
</div>

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
