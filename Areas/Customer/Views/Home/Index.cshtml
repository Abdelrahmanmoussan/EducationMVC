@using IdentityText.ViewModel.View

@model HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero Section -->
<section class="hero text-center py-5 bg-primary text-white">
    <div class="container">
        <h1 class="display-4">Welcome to Our Education Platform</h1>
        <p class="lead">Learn from the best teachers anytime, anywhere.</p>
        <a href="/Courses" class="btn btn-light btn-lg mt-3">Explore Courses</a>
    </div>
</section>

<!-- Most Popular Teachers -->
<section class="py-5">
    <div class="container">
        <h2 class="text-center mb-4">Most Popular Teachers</h2>
        <div class="row">
            @foreach (var teacher in Model.PopularTeachers)
            {
                <div class="col-md-4 mb-4">
                        <a asp-area="Customer" asp-controller="Home" asp-action="TeacherDetails" asp-route-TeacherId="@teacher.TeacherId">
                    <div class="card h-100">
                            <img src="/images/@teacher.ApplicationUser.Photo" class="card-img-top" alt="@teacher.ApplicationUser.FirstName">
                        <div class="card-body">
                            <h5 class="card-title">@teacher.ApplicationUser.FirstName</h5>
                            <p class="card-text">@teacher.Rating</p>
                        </div>
                    </div>
                            </a>
                </div>
            }
        </div>
    </div>
</section>

<!-- Latest Courses -->
<section class="py-5 bg-light">
    <div class="container">
        <h2 class="text-center mb-4">Latest Courses</h2>
        <div class="row">
            @foreach (var course in Model.PopularClassGroups)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <img src="" class="card-img-top" alt="@course.Title">
                        <div class="card-body">
                            <h5 class="card-title">@course.Title</h5>
                            <p class="card-text">@course.Price</p>
                            <a href="/Courses/Details/@course.ClassGroupId" class="btn btn-primary">View Course</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- Portfolio Section -->
<section class="py-5">
    <div class="container">
        <h2 class="text-center mb-4">Our Portfolio</h2>
        <div class="row">
            @foreach (var item in Model.Portfolio)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <img src="" class="card-img-top" alt="@item.Title">
                        <div class="card-body">
                            <h5 class="card-title">@item.Title</h5>
                            <p class="card-text">@item.Location</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<section class="py-5">
    <div class="container">
        <h2 class="text-center mb-4">Contact Us</h2>
        <form>
            <div class="row mb-3">
                <div class="col-md-6">
                    <input type="text" class="form-control" placeholder="Your Name">
                </div>
                <div class="col-md-6">
                    <input type="email" class="form-control" placeholder="Your Email">
                </div>
            </div>
            <div class="mb-3">
                <textarea class="form-control" rows="5" placeholder="Your Message"></textarea>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Send Message</button>
            </div>
        </form>
    </div>
</section>
