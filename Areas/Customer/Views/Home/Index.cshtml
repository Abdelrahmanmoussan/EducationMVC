@using IdentityText.ViewModel.View

@model HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero Section -->
<section id="hero" class="hero section dark-background">

    <img src="assets/img/hero-bg.jpg" alt="" data-aos="fade-in">

    <div class="container text-center" data-aos="fade-up" data-aos-delay="100">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <h2>Welcome to Our Education Center</h2>
                <p>We are team of talented designers making websites with Bootstrap</p>
                <a href="#about" class="btn-get-started">Get Started</a>
            </div>
        </div>
    </div>

</section>
<!-- Team Section -->
<section id="team" class="team section">

    <!-- Section Title -->
    <div class="container section-title">
        <h2>Most Popular Teachers</h2>
        <p>Necessitatibus eius consequatur ex aliquid fuga eum quidem sint consectetur velit</p>
    </div><!-- End Section Title -->

    <div class="container">
        <div class="row">
            @foreach (var teacher in Model.PopularTeachers)
            {
                <div class="col-xl-3 col-lg-4 col-md-6" >
                    <div class="member">
                        <img src="/images/@teacher.ApplicationUser.Photo" class="card-img-top" alt="@teacher.ApplicationUser.FirstName">
                        <a asp-area="Customer" asp-controller="Home" asp-action="TeacherDetails" asp-route-TeacherId="@teacher.TeacherId">
                            <div class="member-info">
                                <div class="member-info-content">
                                    <h4>@teacher.ApplicationUser.FirstName @teacher.ApplicationUser.LastName</h4>
                                    <span>@teacher.Rating</span>
                                </div>

                                <div class="social">
                                    <a href=""><i class="bi bi-twitter-x"></i></a>
                                    <a href=""><i class="bi bi-facebook"></i></a>
                                    <a href=""><i class="bi bi-instagram"></i></a>
                                    <a href=""><i class="bi bi-linkedin"></i></a>
                                </div>
                            </div>
                        </a>
                    </div>
                </div><!-- End Team Member -->
            }
        </div>

    </div>

</section>

