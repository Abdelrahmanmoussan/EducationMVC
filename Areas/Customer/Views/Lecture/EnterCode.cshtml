@model IdentityText.Models.ViewModel.CourseCodeVM

@{
    ViewData["Title"] = "تأكيد كود الكورس";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow rounded-4">
                <div class="card-body">
                    <h4 class="mb-4 text-center text-primary">أدخل كود الكورس للدخول للمحاضرات</h4>
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger text-center">@Model.ErrorMessage</div>
                    }
                    <form asp-action="EnterCode" method="post">
                        <input type="hidden" asp-for="ClassGroupId" />
                        <div class="mb-3">
                            <label asp-for="EnteredCode" class="form-label"></label>
                            <input asp-for="EnteredCode" class="form-control text-center" autocomplete="off" />
                            <span asp-validation-for="EnteredCode" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">دخول</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

