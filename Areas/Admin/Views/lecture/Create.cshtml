@model IdentityText.Models.Lecture

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="col-sm-12 col-xl-6 col-xl-12 mt-5">
        <div class="bg-secondary rounded h-100 p-4">
            <h6 class="mb-4">Create New Lecture</h6>
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="LectureDate" class="control-label"></label>
                    <input asp-for="LectureDate" class="form-control" type="date" />
                    <span asp-validation-for="LectureDate" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="VideoURL" class="control-label"></label>
                    <input asp-for="VideoURL" class="form-control" />
                    <span asp-validation-for="VideoURL" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CreatedAt" class="control-label"></label>
                    <input asp-for="CreatedAt" class="form-control" type="date" />
                    <span asp-validation-for="CreatedAt" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Attendance" class="control-label"></label>
                    <select asp-for="AttendanceId" class="form-control" asp-items="ViewBag.AttendanceId"></select>
                    <span asp-validation-for="AttendanceId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Assessment" class="control-label"></label>
                    <select asp-for="AssessmentId" class="form-control" asp-items="ViewBag.AssessmentId"></select>
                    <span asp-validation-for="AssessmentId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ClassGroup" class="control-label"></label>
                    <select asp-for="ClassGroupId" class="form-control" asp-items="ViewBag.ClassGroupId"></select>
                    <span asp-validation-for="ClassGroupId" class="text-danger"></span>
                </div>

                <div class="d-grid gap-2">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
