@model IdentityText.Models.ViewModel.LectureVM

@{
    ViewData["Title"] = "Create";
}

<div class="container d-flex justify-content-center mt-5">
    <div class="col-md-8">

        <!-- عنوان فورم بشكل أنيق -->
        <div class="chart-header mb-4 rounded-3 shadow-sm d-flex justify-content-center align-items-center text-warning">
            <i class="bi bi-easel-fill me-2"></i> Add New Lecture
        </div>

        <div class="p-4 rounded-3 shadow-sm bg-white border">

            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Title" class="form-label"><i class="bi bi-fonts"></i> Title</label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label"><i class="bi bi-card-text"></i> Description</label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="LectureDate" class="form-label"><i class="bi bi-calendar-event"></i> Lecture Date</label>
                    <input asp-for="LectureDate" type="datetime-local" class="form-control" />
                    <span asp-validation-for="LectureDate" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="VideoURL" class="form-label"><i class="bi bi-camera-video"></i> Video URL</label>
                    <input asp-for="VideoURL" class="form-control" />
                    <span asp-validation-for="VideoURL" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CreatedAt" class="form-label"><i class="bi bi-calendar-plus"></i> Created At</label>
                    <input asp-for="CreatedAt" type="datetime-local" class="form-control" />
                    <span asp-validation-for="CreatedAt" class="text-danger"></span>
                </div>

                @* <div class="mb-3"> *@
                @*     <label asp-for="AssessmentId" class="form-label"><i class="bi bi-patch-check"></i> Assessment</label> *@
                @*     <select asp-for="AssessmentId" class="form-select" asp-items="@Model.AssessmentList"></select> *@
                @* </div> *@

                <div class="mb-3">
                    <label asp-for="ClassGroupId" class="form-label"><i class="bi bi-people-fill"></i> Class Group</label>
                    <select asp-for="ClassGroupId" class="form-select" asp-items="@Model.ClassGroupList"></select>
                </div>

                <div class="d-flex gap-2 mt-4">
                    <button type="submit" class="btn btn-outline-success px-4 rounded-pill shadow-sm">
                        <i class="bi bi-check-circle me-2"></i> Create
                    </button>

                    <a asp-action="Index" class="btn btn-outline-secondary px-4 rounded-pill shadow-sm">
                        <i class="bi bi-arrow-left-circle me-2"></i> Back to List
                    </a>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .chart-header {
        background: linear-gradient(to right, #0d6efd, #6610f2);
        color: white;
        padding: 12px 20px;
        font-size: 1.2rem;
        font-weight: bold;
    }

    .form-label {
        font-weight: 500;
    }

    .form-control,
    .form-select {
        padding-left: 1rem;
        padding-right: 1rem;
    }
</style>
