@model IEnumerable<IdentityText.Models.Lecture>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="col-sm-12 col-xl-6 col-xl-12">
        <div class="bg-secondary rounded h-100 p-4">
            <h6 class="mb-4">All Lectures</h6>

            <a href="/Admin/Lecture/Create" class="btn btn-success w-100 m-2" type="button">
                <i class="fa fa-home"></i>
                Create
            </a>

            <table class="table table-dark text-center">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Title</th>
                        <th scope="col">Description</th>
                        <th scope="col">Lecture Date</th>
                        <th scope="col">Video URL</th>
                        <th scope="col">Created At</th>
                        <th scope="col">Attendance</th>
                        <th scope="col">Assessment</th>
                        <th scope="col">Class Group</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@item.LectureId</th>
                            <td>@item.Title</td>
                            <td>@item.Description</td>
                            <td>@item.LectureDate</td>
                            <td>@item.VideoURL</td>
                            <td>@item.CreatedAt</td>
                            <td>@item.Attendance?.AttendanceId</td>
                            <td>@item.Assessment?.Title</td>
                            <td>@item.ClassGroup?.Title</td>
                            <td>
                                <a href="/Admin/Lecture/Edit?id=@item.LectureId" class="btn btn-warning rounded-pill m-2">Update</a>
                                <a href="/Admin/Lecture/Details?id=@item.LectureId" class="btn btn-info rounded-pill m-2">Details</a>
                                <button class="btn btn-danger rounded-pill m-2" onclick="confirmDelete(@item.LectureId)">Delete</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    @if (TempData["notification"] != null)
    {
        <script>
            toastr.success('@TempData["notification"]');
        </script>
    }

    <script>
        function confirmDelete(id){
            Swal.fire({
                title: "Are you sure?",
                text: "You won't be able to revert this!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Yes, delete it!"
            }).then((result) => {
                if (result.isConfirmed)
                {
                    window.location.href = "/Admin/Lecture/Delete?id=" + id;

                    Swal.fire({
                        title: "Deleted!",
                        text: "Your file has been deleted.",
                        icon: "success"
                    });
                }
            });
        }
    </script>
}
