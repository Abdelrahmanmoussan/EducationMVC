@model IdentityText.Models.Student

@{
    ViewData["Title"] = "Details";
}

<!-- عنوان الصفحة -->
<div class="chart-header mb-4 rounded-3 shadow-sm d-flex justify-content-center align-items-center text-warning">
    <i class="bi bi-people-fill me-2"></i> Student Details
</div>

<!-- تفاصيل الطالب داخل بطاقة -->
<div class="table-wrapper rounded-3 overflow-hidden shadow-sm bg-dark text-white p-4">
    <dl class="row mb-0">
        <dt class="col-sm-2"> @Html.DisplayNameFor(model => model.UserId) </dt>
        <dd class="col-sm-10"> @Html.DisplayFor(model => model.UserId) </dd>

        <dt class="col-sm-2"> @Html.DisplayNameFor(model => model.ParentName) </dt>
        <dd class="col-sm-10"> @Html.DisplayFor(model => model.ParentName) </dd>

        <dt class="col-sm-2"> @Html.DisplayNameFor(model => model.ParentPhone) </dt>
        <dd class="col-sm-10"> @Html.DisplayFor(model => model.ParentPhone) </dd>

        <dt class="col-sm-2"> @Html.DisplayNameFor(model => model.ParentMail) </dt>
        <dd class="col-sm-10"> @Html.DisplayFor(model => model.ParentMail) </dd>

        <dt class="col-sm-2"> @Html.DisplayNameFor(model => model.StudentDB) </dt>
        <dd class="col-sm-10"> @Html.DisplayFor(model => model.StudentDB) </dd>

        <dt class="col-sm-2"> @Html.DisplayNameFor(model => model.EnrollmentDate) </dt>
        <dd class="col-sm-10"> @Html.DisplayFor(model => model.EnrollmentDate) </dd>

        <dt class="col-sm-2"> @Html.DisplayNameFor(model => model.EmergencyContact) </dt>
        <dd class="col-sm-10"> @Html.DisplayFor(model => model.EmergencyContact) </dd>

        <dt class="col-sm-2"> @Html.DisplayNameFor(model => model.AttendancePercent) </dt>
        <dd class="col-sm-10"> @Html.DisplayFor(model => model.AttendancePercent) </dd>

        <dt class="col-sm-2"> @Html.DisplayNameFor(model => model.StudentNotes) </dt>
        <dd class="col-sm-10"> @Html.DisplayFor(model => model.StudentNotes) </dd>

        <dt class="col-sm-2"> @Html.DisplayNameFor(model => model.Subscription) </dt>
        <dd class="col-sm-10"> @Html.DisplayFor(model => model.Subscription.Code) </dd>

        <dt class="col-sm-2"> @Html.DisplayNameFor(model => model.AcademicYear) </dt>
        <dd class="col-sm-10"> @Html.DisplayFor(model => model.AcademicYear.Name) </dd>
    </dl>
</div>

<!-- أزرار الأكشن -->
<div class="mt-4">
    <a asp-action="Edit" asp-route-id="@Model?.StudentId" class="btn btn-sm btn-outline-warning rounded-pill me-2">
        <i class="bi bi-pencil"></i> Edit
    </a>
    <a asp-action="Index" class="btn btn-sm btn-outline-info rounded-pill">
        <i class="bi bi-arrow-left-circle"></i> Back to List
    </a>
</div>

<!-- CSS داخلي لتوحيد التنسيق -->
<style>
    .chart-header {
        background: linear-gradient(to right, #0d6efd, #6610f2);
        padding: 12px 20px;
        font-size: 1.2rem;
        font-weight: bold;
        border-radius: 12px;
    }

    .table-wrapper {
        border-radius: 12px;
        border: 1px solid #dee2e6;
    }

    dt.col-sm-2 {
        font-weight: bold;
        color: gold;
        padding-top: 0.5rem;
        padding-bottom: 0.5rem;
    }

    dd.col-sm-10 {
        padding-top: 0.5rem;
        padding-bottom: 0.5rem;
    }

    .btn i {
        margin-right: 5px;
    }

    .row {
        display: flex;
        justify-content: center; /* لتوسيط المحتوى أفقياً */
    }
</style>
