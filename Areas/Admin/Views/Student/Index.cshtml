@model IEnumerable<IdentityText.Models.Student>

@{
    ViewData["Title"] = "Students List";
}

<!-- تنسيق العنوان -->
<div class="chart-header mb-4 rounded-3 shadow-sm d-flex justify-content-center align-items-center text-warning">
    <i class="bi bi-people-fill me-2"></i> Students List
</div>

<!-- زر الإنشاء -->
<p class="text-center">
    <a asp-action="Create" class="btn btn-outline-success rounded-pill px-4 shadow-sm">
        <i class="bi bi-plus-circle me-2"></i> Create New Student
    </a>
</p>


<!-- جدول بيانات -->
<div class="table-wrapper rounded-3 overflow-hidden shadow-sm">
    <table class="table table-bordered table-hover align-middle mb-0">
        <thead>
            <tr class="gradient-header">
                <th>@Html.DisplayNameFor(model => model.First().UserId)</th>
                <th>@Html.DisplayNameFor(model => model.First().ParentName)</th>
                <th>@Html.DisplayNameFor(model => model.First().ParentPhone)</th>
                <th>@Html.DisplayNameFor(model => model.First().ParentMail)</th>
                <th>@Html.DisplayNameFor(model => model.First().StudentDB)</th>
                <th>@Html.DisplayNameFor(model => model.First().EnrollmentDate)</th>
                <th>@Html.DisplayNameFor(model => model.First().EmergencyContact)</th>
                <th>@Html.DisplayNameFor(model => model.First().AttendancePercent)</th>
                <th>@Html.DisplayNameFor(model => model.First().StudentNotes)</th>
                <th>@Html.DisplayNameFor(model => model.First().Subscription.Code)</th>
                <th>@Html.DisplayNameFor(model => model.First().AcademicYear.Name)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.UserId)</td>
                    <td>@Html.DisplayFor(modelItem => item.ParentName)</td>
                    <td>@Html.DisplayFor(modelItem => item.ParentPhone)</td>
                    <td>@Html.DisplayFor(modelItem => item.ParentMail)</td>
                    <td>@Html.DisplayFor(modelItem => item.StudentDB)</td>
                    <td>@Html.DisplayFor(modelItem => item.EnrollmentDate)</td>
                    <td>@Html.DisplayFor(modelItem => item.EmergencyContact)</td>
                    <td>@Html.DisplayFor(modelItem => item.AttendancePercent)</td>
                    <td>@Html.DisplayFor(modelItem => item.StudentNotes)</td>
                    <td>@Html.DisplayFor(modelItem => item.Subscription.Code)</td>
                    <td>@Html.DisplayFor(modelItem => item.AcademicYear.Name)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.StudentId" class="btn btn-sm btn-outline-warning rounded-pill me-1">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                        <a asp-action="Details" asp-route-id="@item.StudentId" class="btn btn-sm btn-outline-info rounded-pill me-1">
                            <i class="bi bi-eye"></i> Details
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.StudentId" class="btn btn-sm btn-outline-danger rounded-pill">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- CSS داخلي لتحقيق نفس ستايل المدرسين -->
<style>
    thead tr.gradient-header th {
        background: linear-gradient(to right, #0e6efd, #6511f2) !important;
        color: gold !important;
        text-align: center;
        vertical-align: middle;
        height: 60px;
        font-weight: bold;
    }

    .chart-header {
        background: linear-gradient(to right, #0d6efd, #6610f2);
        padding: 12px 20px;
        font-size: 1.2rem;
        font-weight: bold;
    }

    .table-wrapper {
        border-radius: 12px;
        overflow: hidden;
        border: 1px solid #dee2e6;
    }

    .table th,
    .table td {
        vertical-align: middle;
    }

    .btn-sm i {
        margin-right: 4px;
    }

    .table {
        font-size: 0.95rem;
    }
</style>
