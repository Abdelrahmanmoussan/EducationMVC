@model IdentityText.Models.Student

@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-5">
    <div class="col-sm-12 col-xl-6 col-xl-12">
        <div class="bg-secondary rounded h-100 p-4">
            <h6 class="mb-4">Edit Student Item</h6>
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="StudentId" />

                <div class="mb-3">
                    <label asp-for="UserId" class="form-label">User ID</label>
                    <input asp-for="UserId" class="form-control" />
                    <span class="text-danger" asp-validation-for="UserId"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ParentName" class="form-label">Parent Name</label>
                    <input asp-for="ParentName" class="form-control" />
                    <span class="text-danger" asp-validation-for="ParentName"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ParentPhone" class="form-label">Parent Phone</label>
                    <input asp-for="ParentPhone" class="form-control" />
                    <span class="text-danger" asp-validation-for="ParentPhone"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ParentMail" class="form-label">Parent Email</label>
                    <input asp-for="ParentMail" class="form-control" />
                    <span class="text-danger" asp-validation-for="ParentMail"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="StudentDB" class="form-label">Date of Birth</label>
                    <input asp-for="StudentDB" class="form-control" />
                    <span class="text-danger" asp-validation-for="StudentDB"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="EnrollmentDate" class="form-label">Enrollment Date</label>
                    <input asp-for="EnrollmentDate" class="form-control" />
                    <span class="text-danger" asp-validation-for="EnrollmentDate"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="EmergencyContact" class="form-label">Emergency Contact</label>
                    <input asp-for="EmergencyContact" class="form-control" />
                    <span class="text-danger" asp-validation-for="EmergencyContact"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="AttendancePercent" class="form-label">Attendance %</label>
                    <input asp-for="AttendancePercent" class="form-control" />
                    <span class="text-danger" asp-validation-for="AttendancePercent"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="StudentNotes" class="form-label">Notes</label>
                    <input asp-for="StudentNotes" class="form-control" />
                    <span class="text-danger" asp-validation-for="StudentNotes"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="SubscriptionId" class="form-label">Subscription</label>
                    <select asp-for="SubscriptionId" class="form-control" asp-items="ViewBag.SubscriptionId"></select>
                    <span class="text-danger" asp-validation-for="SubscriptionId"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="AcademicYearId" class="form-label">Academic Year</label>
                    <select asp-for="AcademicYearId" class="form-control" asp-items="ViewBag.AcademicYearId"></select>
                    <span class="text-danger" asp-validation-for="AcademicYearId"></span>
                </div>

                <button type="submit" class="btn btn-primary">Save</button>
            </form>
        </div>

        <div class="mt-3">
            <a class="btn btn-light" asp-action="Index">Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
