@model IdentityText.Models.Student

@{
    ViewData["Title"] = "Edit Student";
}

<!-- عنوان موحد -->
<div class="chart-header mb-4 rounded-3 shadow-sm d-flex justify-content-center align-items-center text-warning">
    <i class="bi bi-pencil-square me-2"></i> Edit Student
</div>

<!-- نفس تصميم الفورم -->
<div class="form-container p-4 rounded-3 shadow-sm bg-white">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        <input type="hidden" asp-for="StudentId" />

        <div class="mb-3">
            <label asp-for="UserId" class="form-label"></label>
            <input asp-for="UserId" class="form-control rounded-pill" />
            <span asp-validation-for="UserId" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ParentName" class="form-label"></label>
            <input asp-for="ParentName" class="form-control rounded-pill" />
            <span asp-validation-for="ParentName" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ParentPhone" class="form-label"></label>
            <input asp-for="ParentPhone" class="form-control rounded-pill" />
            <span asp-validation-for="ParentPhone" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ParentMail" class="form-label"></label>
            <input asp-for="ParentMail" class="form-control rounded-pill" />
            <span asp-validation-for="ParentMail" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label asp-for="StudentDB" class="form-label"></label>
            <input asp-for="StudentDB" type="date" class="form-control rounded-pill" />
            <span asp-validation-for="StudentDB" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label asp-for="EnrollmentDate" class="form-label"></label>
            <input asp-for="EnrollmentDate" type="date" class="form-control rounded-pill" />
            <span asp-validation-for="EnrollmentDate" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label asp-for="EmergencyContact" class="form-label"></label>
            <input asp-for="EmergencyContact" class="form-control rounded-pill" />
            <span asp-validation-for="EmergencyContact" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label asp-for="AttendancePercent" class="form-label"></label>
            <input asp-for="AttendancePercent" class="form-control rounded-pill" />
            <span asp-validation-for="AttendancePercent" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label asp-for="StudentNotes" class="form-label"></label>
            <input asp-for="StudentNotes" class="form-control rounded-pill" />
            <span asp-validation-for="StudentNotes" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label asp-for="SubscriptionId" class="form-label"></label>
            <select asp-for="SubscriptionId" class="form-select rounded-pill" asp-items="ViewBag.SubscriptionId"></select>
            <span asp-validation-for="SubscriptionId" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label asp-for="AcademicYearId" class="form-label"></label>
            <select asp-for="AcademicYearId" class="form-select rounded-pill" asp-items="ViewBag.AcademicYearId"></select>
            <span asp-validation-for="AcademicYearId" class="text-danger small"></span>
        </div>

        <div class="d-flex justify-content-between align-items-center mt-4">
            <button type="submit" class="btn btn-outline-primary px-4 rounded-pill shadow-sm">
                <i class="bi bi-check-circle me-2"></i> Save
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary rounded-pill">
                <i class="bi bi-arrow-left-circle me-1"></i> Back to List
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


<style>
    .chart-header {
        background: linear-gradient(to right, #0d6efd, #6610f2);
        color: white;
        padding: 12px 20px;
        font-size: 1.2rem;
        font-weight: bold;
    }

    .form-label {
        font-weight: 500;
    }

    .form-container {
        background-color: #ffffff;
    }

    .form-control,
    .form-select {
        padding-left: 1rem;
        padding-right: 1rem;
    }

    .row {
        display: flex;
        justify-content: center;
    }
</style>
