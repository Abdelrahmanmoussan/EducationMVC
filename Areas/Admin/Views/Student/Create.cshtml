@model IdentityText.Models.Student

@{
    ViewData["Title"] = "Create";
}

<div class="container bg-dark text-white">
    <div class="col-sm-12 col-xl-12 mt-5">
        <div class="bg-dark shadow rounded p-4">
            <h5 class="mb-4 text-light"><i class="bi bi-person-plus-fill text-danger"></i> Create New Student</h5>
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-success"></div>

                <div class="mb-3">
                    <label asp-for="UserId" class="form-label text-light"><i class="bi bi-person-badge"></i> User ID</label>
                    <input asp-for="UserId" class="form-control bg-secondary text-white" />
                    <span asp-validation-for="UserId" class="text-success"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ParentName" class="form-label text-light"><i class="bi bi-person-vcard"></i> Parent Name</label>
                    <input asp-for="ParentName" class="form-control bg-secondary text-white" />
                    <span asp-validation-for="ParentName" class="text-success"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ParentPhone" class="form-label text-light"><i class="bi bi-telephone"></i> Parent Phone</label>
                    <input asp-for="ParentPhone" class="form-control bg-secondary text-white" />
                    <span asp-validation-for="ParentPhone" class="text-success"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ParentMail" class="form-label text-light"><i class="bi bi-envelope"></i> Parent Email</label>
                    <input asp-for="ParentMail" class="form-control bg-secondary text-white" />
                    <span asp-validation-for="ParentMail" class="text-success"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="StudentDB" class="form-label text-light"><i class="bi bi-calendar-heart"></i> Student Date of Birth</label>
                    <input asp-for="StudentDB" type="date" class="form-control bg-secondary text-white" />
                    <span asp-validation-for="StudentDB" class="text-success"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="EnrollmentDate" class="form-label text-light"><i class="bi bi-calendar-check"></i> Enrollment Date</label>
                    <input asp-for="EnrollmentDate" type="date" class="form-control bg-secondary text-white" />
                    <span asp-validation-for="EnrollmentDate" class="text-success"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="AttendancePercent" class="form-label text-light"><i class="bi bi-graph-up-arrow"></i> Attendance %</label>
                    <input asp-for="AttendancePercent" class="form-control bg-secondary text-white" />
                    <span asp-validation-for="AttendancePercent" class="text-success"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="StudentNotes" class="form-label text-light"><i class="bi bi-journal-text"></i> Notes</label>
                    <input asp-for="StudentNotes" class="form-control bg-secondary text-white" />
                    <span asp-validation-for="StudentNotes" class="text-success"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="SubscriptionId" class="form-label text-light"><i class="bi bi-receipt"></i> Subscription</label>
                    <select asp-for="SubscriptionId" class="form-select bg-secondary text-white" asp-items="ViewBag.SubscriptionId"></select>
                </div>

                <div class="mb-3">
                    <label asp-for="AcademicYearId" class="form-label text-light"><i class="bi bi-calendar-range"></i> Academic Year</label>
                    <select asp-for="AcademicYearId" class="form-select bg-secondary text-white" asp-items="ViewBag.AcademicYearId">
                        <option value="">-- اختر السنه الدراسيه --</option>
                    </select>
                </div>

                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-check2-circle"></i> Create
                </button>
                <a asp-action="Index" class="btn btn-outline-light ms-2">
                    <i class="bi bi-arrow-left-circle"></i> Back to List
                </a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
