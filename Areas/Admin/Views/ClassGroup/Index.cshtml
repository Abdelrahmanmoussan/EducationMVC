@model IEnumerable<IdentityText.Models.ClassGroup>
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="col-sm-12 col-xl-6 col-xl-12">
        <div class="bg-secondary rounded h-100 p-4">
            <h6 class="mb-4">All Class Groups</h6>

            <a href="/Admin/ClassGroup/Create" class="btn btn-success w-100 m-2" type="button">
                <i class="fa fa-plus"></i>
                Create New
            </a>

            <table class="table table-dark text-center">
                <thead>
                    <tr>
                        <th scope="col">Title</th>
                        <th scope="col">Location</th>
                        <th scope="col">Price</th>
                        <th scope="col">Start Date</th>
                        <th scope="col">End Date</th>
                        <th scope="col">Subject</th>
                        <th scope="col">Teacher</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Title</td>
                            <td>@item.Location</td>
                            <td>@item.Price</td>
                            <td>@item.StartDate.ToShortDateString()</td>
                            <td>@item.EndDate.ToShortDateString()</td>
                            <td>@item.Subject?.Title</td>
                            <td>@item.Teacher?.UserId</td>
                            <td>
                                <a href="/Admin/ClassGroup/Edit?id=@item.ClassGroupId" class="btn btn-warning rounded-pill m-1">Update</a>
                                <a asp-action="Details" asp-route-id="@item.ClassGroupId" class="btn btn-info rounded-pill m-1">Details</a>
                                <button class="btn btn-danger rounded-pill m-1" onclick="confirmDelete(@item.ClassGroupId)">Delete</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    @if (TempData["notification"] != null)
    {
        <script>
            toastr.success('@TempData["notification"]');
        </script>
    }

    <script>
        function confirmDelete(id) {
            Swal.fire({
                title: "Are you sure?",
                text: "You won't be able to revert this!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Yes, delete it!"
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = "/Admin/ClassGroup/Delete?id=" + id;
                }
            });
        }
    </script>
}
