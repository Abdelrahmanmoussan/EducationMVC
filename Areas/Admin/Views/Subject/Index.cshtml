@model IEnumerable<IdentityText.Models.Subject>

@{
    ViewData["Title"] = "Subjects";
}

<div class="container">
    <div class="col-sm-12 col-xl-6 col-xl-12">
        <div class="bg-secondary rounded h-100 p-4">
            <h6 class="mb-4">All Subjects</h6>

            <a href="/Admin/Subject/Create" class="btn btn-success w-100 m-2" type="button">
                <i class="fa fa-home"></i>
                Create
            </a>

            <table class="table table-dark text-center">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Title</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@item.SubjectId</th>
                            <td>@item.Title</td>
                            <td>
                                <a href="/Admin/Subject/Edit?id=@item.SubjectId" class="btn btn-warning rounded-pill m-2">Update</a>
                                <a href="/Admin/Subject/Details?id=@item.SubjectId" class="btn btn-info rounded-pill m-2">Details</a>
                                <button class="btn btn-primary rounded-pill m-2" onclick="confirmDelete(@item.SubjectId)">Delete</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    @if (TempData["notification"] != null)
    {
        <script>
            toastr.success('@TempData["notification"]');
        </script>
    }

    <script>
        function confirmDelete(id) {
            Swal.fire({
                title: "Are you sure?",
                text: "You won't be able to revert this!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Yes, delete it!"
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = "/Admin/Subject/Delete?id=" + id;
                }
            });
        }
    </script>
}
