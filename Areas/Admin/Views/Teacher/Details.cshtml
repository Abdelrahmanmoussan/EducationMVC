@model IdentityText.Models.Teacher

@{
    ViewData["Title"] = "Teacher Details";
}



<!-- بيانات المدرّس -->
<div class="row">
    <div class="col-md-8">
        <div class="form-container p-4 rounded-3 shadow-sm bg-white">
            <!-- عنوان الصفحة -->
            <div class="chart-header mb-4 rounded-3 shadow-sm d-flex justify-content-center align-items-center text-warning">
                <i class="bi bi-person-lines-fill me-2"></i> Teacher Details
            </div>
            <dl class="row mb-0">

                <dt class="col-sm-4 fw-bold text-secondary">
                    @Html.DisplayNameFor(model => model.UserId)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.UserId)
                </dd>

                <dt class="col-sm-4 fw-bold text-secondary">
                    @Html.DisplayNameFor(model => model.TeacherHireDate)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.TeacherHireDate)
                </dd>

                <dt class="col-sm-4 fw-bold text-secondary">
                    @Html.DisplayNameFor(model => model.TeacherDB)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.TeacherDB)
                </dd>

                <dt class="col-sm-4 fw-bold text-secondary">
                    @Html.DisplayNameFor(model => model.TeacherNetAmount)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.TeacherNetAmount)
                </dd>

                <dt class="col-sm-4 fw-bold text-secondary">
                    @Html.DisplayNameFor(model => model.TeacherNotes)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.TeacherNotes)
                </dd>

                <dt class="col-sm-4 fw-bold text-secondary">
                    @Html.DisplayNameFor(model => model.Subject)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Subject.Title)
                </dd>

            </dl>

            <!-- أزرار التحكم -->
            <div class="d-flex justify-content-between align-items-center mt-4">
                <a asp-action="Edit" asp-route-id="@Model?.TeacherId" class="btn btn-outline-primary rounded-pill shadow-sm">
                    <i class="bi bi-pencil-square me-1"></i> Edit
                </a>
                <a asp-action="Index" class="btn btn-outline-secondary rounded-pill">
                    <i class="bi bi-arrow-left-circle me-1"></i> Back to List
                </a>
            </div>

        </div>
    </div>
</div>

<!-- تنسيقات CSS -->
<style>
    .chart-header {
        background: linear-gradient(to right, #0d6efd, #6610f2);
        color: white;
        padding: 12px 20px;
        font-size: 1.2rem;
        font-weight: bold;
    }

    .form-container {
        background-color: #ffffff;
    }

    .fw-bold {
        font-weight: 600;
    }

    .row {
        display: flex;
        justify-content: center; 
    }
</style>
