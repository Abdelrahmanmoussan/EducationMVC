@model IdentityText.Models.Teacher

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="col-sm-12 col-xl-6 col-xl-12 mt-5">
        <div class="bg-secondary rounded h-100 p-4">
            <h6 class="mb-4">Create New Teacher</h6>

            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="UserId" class="form-label"></label>
                    <input asp-for="UserId" class="form-control" />
                    <span asp-validation-for="UserId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="TeacherHireDate" class="form-label"></label>
                    <input asp-for="TeacherHireDate" class="form-control" />
                    <span asp-validation-for="TeacherHireDate" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="TeacherDB" class="form-label"></label>
                    <input asp-for="TeacherDB" class="form-control" />
                    <span asp-validation-for="TeacherDB" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="TeacherNetAmount" class="form-label"></label>
                    <input asp-for="TeacherNetAmount" class="form-control" />
                    <span asp-validation-for="TeacherNetAmount" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="TeacherNotes" class="form-label"></label>
                    <input asp-for="TeacherNotes" class="form-control" />
                    <span asp-validation-for="TeacherNotes" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="SubjectId" class="form-label"></label>
                    <select asp-for="SubjectId" class="form-control" asp-items="ViewBag.SubjectId">
                        <option value="">-- اختر المادة --</option>
                    </select>
                    <span asp-validation-for="SubjectId" class="text-danger"></span>
                </div>

                <input type="submit" value="Create" class="btn btn-primary w-100 mt-3" />
            </form>

            <div class="mt-3">
                <a asp-action="Index" class="text-white">Back to List</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
