@model IdentityText.Models.Teacher

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Teacher</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TeacherId" />

            <div class="form-group">
                <label class="control-label">Teacher Name</label>
                <input type="text" class="form-control" value="@ViewBag.Teacher[0].Text" disabled />
                <input type="hidden" asp-for="UserId" />
            </div>


            <div class="form-group">
                <label asp-for="TeacherHireDate" class="control-label"></label>
                <input asp-for="TeacherHireDate" class="form-control" />
                <span asp-validation-for="TeacherHireDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeacherDB" class="control-label"></label>
                <input asp-for="TeacherDB" class="form-control" />
                <span asp-validation-for="TeacherDB" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeacherNetAmount" class="control-label"></label>
                <input asp-for="TeacherNetAmount" class="form-control" />
                <span asp-validation-for="TeacherNetAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeacherNotes" class="control-label"></label>
                <input asp-for="TeacherNotes" class="form-control" />
                <span asp-validation-for="TeacherNotes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rating" class="control-label"></label>
                <input asp-for="Rating" class="form-control" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SubjectId" class="control-label"></label>
                <select asp-for="SubjectId" class="form-control" asp-items="ViewBag.Subject"></select>
                <span asp-validation-for="SubjectId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
