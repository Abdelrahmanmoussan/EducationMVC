@model IEnumerable<IdentityText.Models.Teacher>

@{
    ViewData["Title"] = "All Teachers";
}

<div class="container">
    <div class="col-sm-12 col-xl-6 col-xl-12">
        <div class="bg-secondary rounded h-100 p-4">
            <h6 class="mb-4">All Teachers</h6>

            <a href="/Admin/Teacher/Create" class="btn btn-success w-100 m-2" type="button">
                <i class="fa fa-plus"></i> Create
            </a>

            <table class="table table-dark text-center">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>User ID</th>
                        <th>Hire Date</th>
                        <th>DB</th>
                        <th>Net Amount</th>
                        <th>Notes</th>
                        <th>Subject</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.TeacherId</td>
                            <td>@item.UserId</td>
                            <td>@item.TeacherHireDate.ToShortDateString()</td>
                            <td>@item.TeacherDB</td>
                            <td>@item.TeacherNetAmount</td>
                            <td>@item.TeacherNotes</td>
                            <td>@item.Subject?.Title</td>
                            <td>
                                <a href="/Admin/Teacher/Edit?id=@item.TeacherId" class="btn btn-warning rounded-pill m-2">Update</a>
                                <a href="/Admin/Teacher/Details?id=@item.TeacherId" class="btn btn-info rounded-pill m-2">Details</a>
                                <button class="btn btn-danger rounded-pill m-2" onclick="confirmDelete(@item.TeacherId)">Delete</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    @if (TempData["notification"] != null)
    {
        <script>
            toastr.success('@TempData["notification"]');
        </script>
    }

    <script>
        function confirmDelete(id) {
            Swal.fire({
                title: "Are you sure?",
                text: "You won't be able to revert this!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Yes, delete it!"
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = "/Admin/Teacher/Delete?id=" + id;
                }
            });
        }
    </script>
}
