@model IEnumerable<IdentityText.Models.Teacher>

@{
    ViewData["Title"] = "Teachers";
}

<!-- تنسيق العنوان -->
<div class="chart-header mb-4 rounded-3 shadow-sm d-flex justify-content-center align-items-center text-warning">
    <i class="bi bi-person-badge-fill me-2"></i> Teachers List
</div>


<!-- زر الإنشاء -->
<p class="text-center">
    <a asp-action="Create" class="btn btn-outline-success rounded-pill px-4 shadow-sm">
        <i class="bi bi-plus-circle me-2"></i> Create New Teacher
    </a>
</p>


<!-- جدول بيانات -->
<div class="table-wrapper rounded-3 overflow-hidden shadow-sm">
    <table class="table table-bordered table-hover align-middle mb-0">
    <thead>
        <tr class="gradient-header">
            <th>@Html.DisplayNameFor(model => model.First().TeacherId)</th>
            <th>@Html.DisplayNameFor(model => model.First().TeacherHireDate)</th>
            <th>@Html.DisplayNameFor(model => model.First().TeacherDB)</th>
            <th>@Html.DisplayNameFor(model => model.First().TeacherNetAmount)</th>
            <th>@Html.DisplayNameFor(model => model.First().TeacherNotes)</th>
            <th>@Html.DisplayNameFor(model => model.First().Subject)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.TeacherId)</td>
                <td>@Html.DisplayFor(modelItem => item.TeacherHireDate)</td>
                <td>@Html.DisplayFor(modelItem => item.TeacherDB)</td>
                <td>@Html.DisplayFor(modelItem => item.TeacherNetAmount)</td>
                <td>@Html.DisplayFor(modelItem => item.TeacherNotes)</td>
                <td>@Html.DisplayFor(modelItem => item.Subject.Title)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.TeacherId" class="btn btn-sm btn-outline-warning rounded-pill me-1">
                        <i class="bi bi-pencil"></i> Edit
                    </a>
                    <a asp-action="Details" asp-route-id="@item.TeacherId" class="btn btn-sm btn-outline-info rounded-pill me-1">
                        <i class="bi bi-eye"></i> Details
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.TeacherId" class="btn btn-sm btn-outline-danger rounded-pill">
                        <i class="bi bi-trash"></i> Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
<!-- CSS داخلي يحقق نفس ستايل chart-header -->
<style>
    thead tr.gradient-header th {
        background: linear-gradient(to right, #0e6efd, #6511f2) !important;
        color: gold !important;
        text-align: center; /* توسيط أفقي */
        vertical-align: middle; /* توسيط عمودي */
        height: 60px; /* تأكد من وجود مساحة كافية للتمركز */
        font-weight: bold; /* تحسين شكل النص */
    }


    .chart-header {
        background: linear-gradient(to right, #0d6efd, #6610f2);
        padding: 12px 20px;
        font-size: 1.2rem;
        font-weight: bold;
    }


    .table-wrapper {
        border-radius: 12px;
        overflow: hidden;
        border: 1px solid #dee2e6;
    }

    .table th,
    .table td {
        vertical-align: middle;
    }

    .btn-sm i {
        margin-right: 4px;
    }

    .table {
        font-size: 0.95rem;
    }
</style>
