@model IEnumerable<IdentityText.Models.Teacher>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeacherHireDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeacherDB)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeacherNetAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeacherNotes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subject)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TeacherHireDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TeacherDB)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TeacherNetAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TeacherNotes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Subject.Title)
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@item.TeacherId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
