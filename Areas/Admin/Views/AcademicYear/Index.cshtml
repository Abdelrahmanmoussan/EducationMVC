@model IEnumerable<IdentityText.Models.AcademicYear>
@{
    ViewData["Title"] = "Academic Years";
}

<!-- العنوان -->
<div class="chart-header mb-4 rounded-3 shadow-sm d-flex justify-content-center align-items-center text-warning">
    <i class="bi bi-calendar-event me-2"></i> Academic Years List
</div>

<!-- زر Create في النص -->
<p class="text-center">
    <a asp-action="Create" class="btn btn-outline-success rounded-pill px-4 shadow-sm">
        <i class="bi bi-plus-circle me-2"></i> Create New Academic Year
    </a>
</p>

<!-- جدول بيانات -->
<div class="table-wrapper rounded-3 overflow-hidden shadow-sm">
    <table class="table table-bordered table-hover align-middle mb-0 text-center">
        <thead>
            <tr class="gradient-header">
                <th>#</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.AcademicYearId</td>
                    <td>@item.Name</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.AcademicYearId" class="btn btn-sm btn-outline-warning rounded-pill me-1">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                        <button type="button" class="btn btn-sm btn-outline-danger rounded-pill" onclick="confirmDelete(@item.AcademicYearId)">
                            <i class="bi bi-trash"></i> Delete
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    .chart-header {
        background: linear-gradient(to right, #0d6efd, #6610f2);
        padding: 12px 20px;
        font-size: 1.2rem;
        font-weight: bold;
    }

    thead tr.gradient-header th {
        background: linear-gradient(to right, #0e6efd, #6511f2) !important;
        color: gold !important;
        text-align: center;
        vertical-align: middle;
        height: 60px;
        font-weight: bold;
    }

    .table-wrapper {
        border-radius: 12px;
        overflow: hidden;
        border: 1px solid #dee2e6;
    }

    .table th,
    .table td {
        vertical-align: middle;
    }

    .btn-sm i {
        margin-right: 4px;
    }

    .table {
        font-size: 0.95rem;
    }
</style>

@section Scripts {
    @if (TempData["notification"] != null)
    {
        <script>
            toastr.success('@TempData["notification"]');
        </script>
    }

    <script>
        function confirmDelete(id) {
            Swal.fire({
                title: "Are you sure?",
                text: "You won't be able to revert this!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Yes, delete it!"
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = "/Admin/AcademicYear/Delete?id=" + id;

                    Swal.fire({
                        title: "Deleted!",
                        text: "Your file has been deleted.",
                        icon: "success"
                    });
                }
            });
        }
    </script>
}
