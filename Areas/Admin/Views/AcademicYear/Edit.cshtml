@model IdentityText.Models.AcademicYear

@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-5">
    <div class="col-sm-12 col-xl-6 col-xl-12">
        <div class="bg-secondary rounded h-100 p-4">
            <h6 class="mb-4">Edit Academic Year Item</h6>
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="AcademicYearId" />
                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Academic Year name</label>
                    <input asp-for="Name" type="text" class="form-control" value="@Model.Name" />
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>
                <button type="submit" class="btn btn-primary">Update</button>
            </form>
        </div>
    </div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
