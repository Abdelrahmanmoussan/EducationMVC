<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Education Center Admin Panel</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">

    <style>
        /* Base styles */
        body {
            overflow-x: hidden;
            background: #f4f7fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            direction: ltr;
            color: #334155;
        }
        /* Header */
        header {
            height: 60px;
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            background: linear-gradient(90deg, #2c3e50, #3498db);
            color: white;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 1.5rem;
            z-index: 1050;
            box-shadow: 0 2px 8px rgb(0 0 0 / 0.15);
            user-select: none;
        }

        header .brand-title {
            font-weight: 700;
            font-size: 1.5rem;
            letter-spacing: 1.2px;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        header .brand-title i {
            color: #f39c12;
            font-size: 1.8rem;
        }

        header .user-welcome {
            font-size: 1rem;
            font-weight: 600;
        }

        /* Sidebar */
        .sidebar {
            width: 260px;
            height: 100vh;
            position: fixed;
            top: 60px;
            left: 0;
            background: #1e293b;
            color: #cbd5e1;
            padding-top: 1.5rem;
            transition: width 0.3s ease, left 0.3s ease;
            overflow-y: auto;
            box-shadow: 2px 0 8px rgb(0 0 0 / 0.1);
            z-index: 1040;
        }

            .sidebar.collapsed {
                width: 70px;
            }

            .sidebar .navbar-brand {
                color: #fbbf24;
                font-weight: 700;
                font-size: 1.25rem;
                padding: 0 1.5rem 1rem;
                border-bottom: 1px solid #334155;
                display: flex;
                align-items: center;
                gap: 0.75rem;
                white-space: nowrap;
                text-align: left;
            }

                .sidebar .navbar-brand i {
                    font-size: 1.8rem;
                }

            .sidebar .profile {
                display: flex;
                align-items: center;
                gap: 1rem;
                padding: 1rem 1.5rem;
                border-bottom: 1px solid #334155;
                transition: opacity 0.3s ease;
            }

            .sidebar.collapsed .profile {
                opacity: 0;
                pointer-events: none;
                height: 0;
                padding: 0;
                margin: 0;
                overflow: hidden;
            }

            .sidebar .profile img {
                width: 45px;
                height: 45px;
                border-radius: 50%;
                border: 2px solid #22c55e;
                object-fit: cover;
                transition: all 0.3s ease;
            }

            .sidebar.collapsed .profile img {
                width: 35px;
                height: 35px;
                border-width: 1.5px;
            }

            .sidebar .profile-info h6 {
                margin-bottom: 0;
                font-weight: 600;
                color: #f3f4f6;
                text-align: left;
            }

            .sidebar .profile-info small {
                color: #94a3b8;
                text-align: left;
                display: block;
            }

            /* Navigation */
            .sidebar nav.nav {
                margin-top: 1rem;
            }

            .sidebar .nav-link {
                color: #cbd5e1;
                padding: 0.75rem 1.5rem;
                font-weight: 500;
                display: flex;
                align-items: center;
                gap: 1rem;
                transition: background-color 0.2s ease, color 0.2s ease;
                white-space: nowrap;
                cursor: pointer;
                text-align: left;
            }

                .sidebar .nav-link:hover,
                .sidebar .nav-link.active {
                    background: #2563eb;
                    color: white;
                    border-radius: 0.375rem;
                }

                .sidebar .nav-link i {
                    min-width: 20px;
                    text-align: center;
                    font-size: 1.2rem;
                }

            /* Dropdown menu */
            .sidebar .dropdown-menu {
                background: #334155;
                border: none;
                margin-left: 2rem;
                border-radius: 0.375rem;
                box-shadow: none;
                padding: 0.25rem 0;
                text-align: left;
            }

            .sidebar .dropdown-item {
                color: #cbd5e1;
                font-weight: 400;
                padding: 0.5rem 1rem 0.5rem 2rem;
                transition: background-color 0.2s ease;
                white-space: nowrap;
                text-align: left;
            }

                .sidebar .dropdown-item:hover {
                    background: #3b82f6;
                    color: white;
                }

        /* Sidebar toggle button */
        #sidebarToggle {
            position: fixed;
            top: 12px;
            left: 12px;
            background: transparent;
            border: none;
            color: #fbbf24;
            font-size: 1.6rem;
            cursor: pointer;
            z-index: 1100;
            transition: transform 0.3s ease;
        }

        /* Content */
        .content {
            margin-left: 260px;
            margin-top: 60px;
            padding: 2rem;
            transition: margin-left 0.3s ease;
            min-height: 100vh;
            background: white;
            border-radius: 8px;
            box-shadow: 0 4px 15px rgb(0 0 0 / 0.05);
            color: #334155;
            text-align: left;
        }

        .sidebar.collapsed ~ .content {
            margin-left: 70px;
        }

        /* Scrollbar for sidebar */
        .sidebar::-webkit-scrollbar {
            width: 6px;
        }

        .sidebar::-webkit-scrollbar-thumb {
            background-color: #2563eb;
            border-radius: 3px;
        }
    </style>
    @RenderSection("Styles", required: false)
</head>
<body>

    <header>
        <button id="sidebarToggle" aria-label="Toggle Sidebar"><i class="fas fa-bars"></i></button>
        <a href="/Admin/Home" class="brand-title">
            <i class="fa-solid fa-graduation-cap"></i> Education Center
        </a>
        <div class="user-welcome">
            Welcome, <strong>Admin</strong>
        </div>
    </header>

    <!-- Sidebar Start -->
    <div class="sidebar" id="sidebar">
        <a href="/Admin/Home" class="navbar-brand">
            <i class="fa-solid fa-graduation-cap"></i> EduCenter
        </a>

        <div class="profile">
            <img src="/img/user.jpg" alt="User profile picture" />
            <div class="profile-info">
                <h6>Admin</h6>
                <small>System Manager</small>
            </div>
        </div>

        <nav class="nav flex-column">
            <a href="/Admin/Home" class="nav-link active">
                <i class="fas fa-tachometer-alt"></i> Dashboard
            </a>

            <!-- Models Collapsible Menu -->
            <a class="nav-link d-flex justify-content-between align-items-center" data-bs-toggle="collapse" data-bs-target="#modelsMenu" role="button" aria-expanded="false" aria-controls="modelsMenu">
                <span><i class="fas fa-layer-group me-2"></i> Models</span>
                <i class="fas fa-chevron-down small"></i>
            </a>
            <div class="collapse ps-4" id="modelsMenu">
                <a class="nav-link" href="/Admin/User">Users</a>
                <a class="nav-link" href="/Admin/Subject">Subjects</a>
                <a class="nav-link" href="/Admin/AcademicYear">Academic Year</a>
                <a class="nav-link" href="/Admin/ClassGroup">Class Groups</a>
                <a class="nav-link" href="/Admin/Lecture">Lectures</a>
                <a class="nav-link d-flex justify-content-between align-items-center" data-bs-toggle="collapse" data-bs-target="#modelsMenu" role="button" aria-expanded="false" aria-controls="modelsMenu">
                    <span><i class="fas fa-layer-group me-2"></i> Attendance</span>
                    <i class="fas fa-chevron-down small"></i>
                </a>
                <div class="collapse ps-4" id="modelsMenu">
                    <a class="nav-link" href="/Admin/Attendance/TakeAttendance">Attendance</a>
                    <a class="nav-link" href="/Admin/Attendance/ShowAttendance">Attendance History</a>
                    <a class="nav-link" href="/Admin/Attendance/AbsenceSummary">Absence Summary</a>
                 </</div>
                <a class="nav-link" href="/Admin/Assessment">Assessments</a>
                <a class="nav-link" href="/Admin/PrivateLesson">Private Lesson</a>
            </div>


            <!-- Configuration Collapsible Menu -->
            <a class="nav-link" data-bs-toggle="collapse" href="#configMenu" role="button" aria-expanded="false" aria-controls="configMenu">
                <i class="fas fa-cogs"></i> Configuration
            </a>
            <div class="collapse ps-4" id="configMenu">
                <a class="nav-link" href="/Admin/Settings">Settings</a>
                <a class="nav-link" href="/Admin/Users">User Management</a>
            </div>
        </nav>
    </div>
    <!-- Sidebar End -->
    <!-- Main Content -->
    <main class="content">
        @RenderBody()
    </main>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Sidebar toggle button logic
        const sidebarToggle = document.getElementById('sidebarToggle');
        const sidebar = document.getElementById('sidebar');
        const content = document.querySelector('.content');

        sidebarToggle.addEventListener('click', () => {
            sidebar.classList.toggle('collapsed');
        });
    </script>
                <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
